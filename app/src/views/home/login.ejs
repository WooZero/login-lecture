        <link rel="stylesheet" href="style.css">

        <script src="/js/home/login.js"></script>
    </head>

    <body class="login_body">
        <header>

        </header>
        <section class="login_section">
            <div class="loginbox">
                <h2>LOGIN</h2>
                <form action="#">
                    <fieldset class="login_area">
                        
                        <div>
                            <label for="loginid"> 아이디(E-mail)</label>
